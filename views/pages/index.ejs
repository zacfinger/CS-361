                <div><%= month_name %> <%= day %></div>
            </div>
            <a data-toggle="modal" data-target="#exampleModal" >
        <div class="week_day">
            <!-- https://stackoverflow.com/questions/3727045/set-variable-in-jinja -->
            
            <% events[day].forEach(function(event) { %>
                    <div class="event_object">
                        <div class="event_header"><%= event.start_republic_hour %>.<%= event.start_republic_minute %></div>
                        <div class="event_content"><%= event.title %></div>
                        </div>
        <% }); %>
